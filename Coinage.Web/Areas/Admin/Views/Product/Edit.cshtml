@model Coinage.Domain.Concrete.Entities.Product
@{
    ViewBag.Title = string.Format("Edit {0}", Model.Name);
}

<h2>Edit @Model.Name</h2>

@using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { role = "form" }))
{
    @Html.Partial("_Form")

    @Html.HiddenFor(p => p.CreatedOn)
    @Html.HiddenFor(p => p.ModifiedOn)

    <button type="submit" class="btn btn-default">Update</button>
}

@section scripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
