@model Coinage.Web.Models.Basket.BasketModel
@{
    ViewBag.Title = "Basket";
}

<h2>Basket</h2>

@if (Model.Items.Any())
{
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Sub Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@Html.TextBoxFor(i => i.Items[Model.Items.IndexOf(item)].Quantity)</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.SubTotal</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2"></td>
                <td>Total</td>
                <td></td>
            </tr>
        </tfoot>
    </table>
}
